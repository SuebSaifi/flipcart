<div class="container my-3 d-flex">
<%@wishlists.each do |wish|%>
    <%if current_user.id == wish.user.id%>
        <div class="card mx-4 " style="width: 18rem;">
            <div class="img">
            <%if wish.product.image.present?%>
                <%=image_tag wish.product.image ,class:"card-img-top",width: "286px",height: '200px'%>
            <%else%>
                 <%= image_tag "default/download.jpeg",class:"card-img-top",width: "286px",height: '200px' %>
            <%end%>
            </div>
            <div class="card-body ">
                <p class="card-text"><%=wish.product.title%>.</p>
                <p class="card-text"><b><small>Rs.</small></b><%=wish.product.price%></p>
            </div>
            <div class="">
            <div id="wish_<%=wish.product.id%>">
                <%=render "wishlists/toggle",product_id: wish.product.id%>
            </div>
                <%=button_to "Add to cart", line_items_path(:product_id => wish.product.id)%>
            </div>
       </div>
    <%end%>
<%end%>
</div>