<div class="card d-flex " style="background-color:;">
    <%=form_tag search_path, :method=> 'get' ,class:"d-flex flex-column" ,role:"search" do %>
            <div class="my-3" style="margin-left:40px;margin-right:40px">
            <%= select_tag "filter[brand_id]", options_from_collection_for_select(Brand.all, "id", "name"), prompt: "Brand" ,class:"form-select ml-4","aria-label"=> "Default select example"%>
            </div>
            <div class="my-3"style="margin-left:40px;margin-right:40px">
            <%= select_tag "filter[category_id]", options_from_collection_for_select(Category.all, "id", "name"), prompt: "Category",class:"form-select" %>
            </div>

                <span class="mx-5">Minimum Price<%=text_field_tag "filter[min]"  %></span>
                <span class="mx-5">Maximum Price<%=text_field_tag "filter[max]"  %></span>

            <%= submit_tag "Filter", name: nil, class:"btn btn-primary btn-sm my-3" %>
 
    <%end%>

</div>