
    <%=form_with model: [@product,@review,@reply] do |form|%> 
        <div >
            <%=form.hidden_field :user_id ,value: current_user.id%> 
            <%=form.hidden_field :parent_id %> 

            <%=form.label :reply%> 
            <%= form.text_area :reply,class:"textarea form-control"%>
             <div class="modal-footer">
            <%=form.submit :reply, class:"btn btn-primary my-3" ,id:"Reply"%> 
            <div>
        </div>
    <%end%>
    
