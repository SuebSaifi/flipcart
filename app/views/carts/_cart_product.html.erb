<%@cart.line_items.each do |cart|%>
<tr>
    <td>
        <%=cart.product.title%>
    </td>
    <td>
        <%=cart.product.price%>
    </td>
    <td>
   <%= cart.quantity.to_i %>
    </td>
    <td>
       <%= number_to_currency(cart.total_price) %>
    </td>
    <td>
        <%= button_to "Add one", line_item_add_path(:id => cart), method: :post %>
        </td>
        <td>  
        <%= button_to "Reduce one", line_item_reduce_path(:id => cart), method: :post %>
        </td>
        <td>    
        <%= button_to "Remove item", line_item_path(cart), method: :delete %>
    </td>
     <td>
    </td>
</tr>
<%end%>
<%if @cart.line_items.present?%>
    <%= link_to "Proceed to checkout", new_order_path ,class:"btn btn-info"%><br>
<%end%>
