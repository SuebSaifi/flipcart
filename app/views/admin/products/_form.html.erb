<div class="container mx-auto my-4"style="width:500px">
    <%= simple_form_for [:admin,@product],local: true do |f| %>
        <div class="card">
            <div class="card-body"> 
                <div class="my-3">
                    <%=f.input :title,label:"Title of Product", input_html:{class:"form-control" },wrapper: false,lable_html:{class:"label"},placeholder:"Title the product",autofocus:true%>
                </div>
                <div class="my-3">
                    <%=f.input :description,label:"Description", input_html:{class:"textarea form-control" },wrapper: false,lable_html:{class:"label"},placeholder:"About the product"%>
                </div>
                <div class="my-3">
                    <%=f.input :price,label:"Price", input_html:{class:"form-control" },wrapper: false,lable_html:{class:"label"},placeholder:"Price the product"%>
                </div>
                <div class="my-3" >
                    <%=f.input :image ,lable_html:{class:"form-lable ",for:"formFile"},class:"btn btn-info"%>   
                </div>
                <div class="my-3" >
                    <%=f.association  :categories ,collection: Category.all, as: :check_boxes,include_hidden: false%>   
                </div>
                <%= f.button :submit , class:"btn btn-info my-3"%>
            </div>
        </div>
    <%end%>
    <%=link_to "back to product list",admin_products_path%>
</div>
