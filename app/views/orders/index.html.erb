<h2>All Orders</h2>
<div class="container">
<% @orders.each do |order| %>
<%if current_user.id == order.user_id%>
  <p>Name: <%= order.name %></p>
  <p>Email: <%= order.email %></p>
  <p>Address: <%= order.address %></p>
    <p>Line Items: </p> 
  <ul>
    <% order.line_items.each do |item| %>
   <li> <span>Name: </span><%= item.product.title  %></li>
    <li><span>Quantity: </span><%= item.quantity %>
    <li><span>Price: </span><%= item.product.price %>

    <% end %>
  </ul>
<%# <hr>
       <%=button_to 'Buy Now',checkout_create_path,params:[:line_items=>order.line_items],method: :post,remote: true,class:"sm"%> %>
<% end%>
<%end%>
</div>
