<div class="container mx-auto my-4"style="width:300px">
<h2>Sign up</h2>


<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
    

<%=render :partial => "#{@user.current_step}" ,:locals=>{:f=>f}%>
  <div class="actions my-4">
    <%= f.submit "Continue",class:"btn btn-success" %>
  </div>
  <div class="actions my-4">
    <%= f.submit "back",class:"btn btn-info" ,name:"back_btn" unless @user.first_step?%>
  </div>
<% end %>
<%= render "devise/shared/links" %>
</div>