<div class="container mx-auto my-4"style="width:400px">
<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
    <div class="d-flex justify-content-center flex-wrap">
  
    <div class="field my-2">
      <%= f.input :first_name,label:"Name",required: true,input_html: {class: "form-control textarea"},wrapper: false,placeholder:"Enter Your First Name",label_html:{class:"label"}%>
    </div>
    
    <div class="field my-2">
        <%= f.input :last_name,required:true,input_html: {class:"form-control textarea"},wrapper: false,label_html:{class:"label"},placeholder:"Enter Last Name"%>
    </div>
    <div class="field my-2">
        <%= f.input :phone_number,required:true,input_html: {class:"form-control textarea"},wrapper: false,label_html:{class:"label"},placeholder:"Enter Phone Number"%>
    </div>    
     <div class="field my-2" >
      <%= f.input :email,required: true,input_html: {class:"form-control textarea floatingInput"},wrapper: false,label_html:{class:"floatingInput"},placeholder:"Enter Your Email"%>
    </div>
         <%=f.input :avatar ,lable_html:{class:"form-lable",for:"formFile"}   %>
    
    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>
    <div class="field my-2">
      <%=f.input :password ,required: true,input_html: {class:"form-control textarea"},wrapper: false,label_html:{class:"lable"},placeholder:"Want to change password" ,hint:("#{@minimum_password_length} characters minimum " if @minimum_password_length)%>
    </div>
    <div class="field my-2">
      <%= f.input :password_confirmation,required: true,input_html: {class:"form-control textarea"},wrapper:false,placeholder:"Enter Your confirm Password",label_html:{class: "label" }%>
    </div>

    <div class="field">
      <%= f.input :current_password, autocomplete: "current-password",class:"form-control textarea" %>
    </div>
  
    <div class="actions">
      <%= f.submit "Update" ,class:"btn btn-info my-3"%>
    </div>
    </div>
<% end %>
<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back %>
</div>